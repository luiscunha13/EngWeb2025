extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue 
      h1= title
    .w3-container
      table.w3-table-all 
        tr
          th id
          th title
          th author
          th publishDate
          th pages
        each book in lbooks
          tr
            td 
              a(href="/" + book._id)= book._id
            td= book.title
            td
                ul.w3-ul 
                    each auth in book.author
                      li
                        a(href="/entidades/" + auth) #{auth}
            td= book.publishDate
            td= book.pages
            
      h3 Books sum: 
            span.w3-large #{soma} books   
            
    footer.w3.container.w3-blue 
      a.w3-btn.w3-orange.w3-round(href="/") Voltar
