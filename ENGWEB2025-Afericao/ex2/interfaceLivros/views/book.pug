extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue 
      h1= title
    .w3-container
      ul.w3-ul
        li.w3-padding 
          B ID: 
          | #{book._id} 
        li.w3-padding 
          B Title: 
          | #{book.title} 
        li.w3-padding 
          B Series: 
          | #{book.series} 
        li.w3-padding 
          B Author: 
          ul
            each auth in book.author
              li= auth
        li.w3-padding 
          B Description: 
          | #{book.description} 
        li.w3-padding 
          B Language: 
          | #{book.language} 
        li.w3-padding 
          B ISBN: 
          | #{book.isbn} 
        li.w3-padding 
          B Genres: 
          ul
            each gen in book.genres
              li= gen
        li.w3-padding 
          B Characters: 
          ul
            each cha in book.characters
              li= cha
        li.w3-padding 
          B Book Format: 
          | #{book.bookFormat} 
        li.w3-padding 
          B Edition: 
          | #{book.edition} 
        li.w3-padding 
          B Pages: 
          | #{book.pages} 
        li.w3-padding 
          B Publisher: 
          | #{book.publisher} 
        li.w3-padding 
          B Publish Date: 
          | #{book.publishDate} 
        li.w3-padding 
          B First Publish Date: 
          | #{book.firstPublishDate} 
        li.w3-padding 
          B Awards: 
          ul
            each awa in book.awards
              li= awa
        li.w3-padding 
          B Num Ratings: 
          | #{book.numRatings} 
        li.w3-padding 
          B Ratings by Stars: 
          | #{book.ratingsByStars} 
        li.w3-padding 
          B Liked Percent: 
          | #{book.likedPercent}
        li.w3-padding 
          B Setting: 
          ul
            each sett in book.setting
              li= sett
        li.w3-padding 
          B Cover: 
          br
          img(src=book.coverImg, alt="Capa do livro", class="w3-image", style="max-width:200px;")

        li.w3-padding 
          B BBEScore: 
          | #{book.bbeScore}
        li.w3-padding 
          B BBEVotes: 
          | #{book.bbeVotes}
        li.w3-padding 
          B Price: 
          | #{book.price}
        


            
