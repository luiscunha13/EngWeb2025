extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue 
      h1= title
       a.w3-btn.w3-round.w3-grey(href="/filmes/registo") +
    .w3-container
      table.w3-table-all 
        tr
          th Ano
          th Título
          th Elenco
          th Géneros
          th Opções
        each filme in lfilmes
          tr
            td= filme.year
            td= filme.title
            td
                ul.w3-ul 
                    each ator in filme.cast
                      li
                        a(href="/ator/" + ator) #{ator}
                      
            td
                ul.w3-ul 
                    each genre in filme.genres
                      li= genre
            td 
              span [
              a(href="/filmes/edit/" + filme.id) Edit
              span ]
              span [
              a(href="/filmes/delete/" + filme.id) Delete
              span ]
    footer.w3.container.w3-blue 
